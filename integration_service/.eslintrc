{
    "extends": [
       "standard",
        "eslint:recommended"     
      ],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
          "impliedStrict": true
        }
      },
      "env": {
        "es6": true,
        "node": true,
        "jest": true
      },
      "plugins": [
        "jest",
        "import",
        "filenames",
        "lodash",
        "react-i18",
        "prettier"
      ],
    "rules": {
      "no-else-return":"error",
      "no-template-curly-in-string":"off",
      "camelcase":"off",
      "indent":[
        "warn",
        2,
        {
          "variableDeclarator":{
            "var":2,
            "let":2,
            "const":4
          },
          "SwitchCase":1
        }
      ],
      "quotes": ["error", "single"],
      "space-in-brackets": ["error", "always"],
      "prettier/prettier":"error",
      "padded-blocks": ["warn", {"classes":"always"}],
      "semi": ["error", "never"],
      "space-before-function-paren": ["error", "never"],
      "eol-last": 0,
      "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 1 }],
      "prefer-const": ["warn"],
      "no-prototype-builtins": ["warn"],
      "node/no-path-concat": ["warn"],
      "array-callback-return": ["warn"]
    }
  }